<swiper class="swiper-area" display-multiple-items="{{banners.length >= 2 ? 2 : 1}}" next-margin='10rpx' previous-margin='20rpx' duration='100'>
  <block wx:for="{{banners}}" wx:key="index">
    <swiper-item bindtap='click' data-index='{{index}}'>
      <image class="slide-image" wx:if="{{item.poster}}" src="{{item.poster}}" mode="aspectFill" bindload='onImageLoadSuccess'/>
      <image class="slide-image" wx:if='{{!loadingSuccess}}' src='/images/video-background.png' mode='aspectFill'></image>
    </swiper-item>
  </block>
</swiper>
  