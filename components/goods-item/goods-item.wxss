.goods-container {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 335rpx;
  height: 454rpx;
  background-color: white;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
}

.slide-image {
  width: 100%;
  height: 75%;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.pos {
  position: absolute;
  z-index: 100;
}

.title-container {
  /* width: 100%; */
  height: 25%;
  background-color: white;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;

  margin: 0;
  padding: 15rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods-title {
  
  color: #2b2b2b;
  font-size: 28rpx;
}
