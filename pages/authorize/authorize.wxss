

.content {
  position: absolute;
  margin-top: 20%;
  width: 100%;
  border-radius: 40rpx;
  background-color: white;

  display: flex;
  flex-direction: column;
}

.content .img-container {
  width: 100%;
  height: 260rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}

.content .text-container {
  width: 100%;
  color: #a6a6a6;
  font-size: 34rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content .text-container text {
  padding: 10rpx;
  
}

.content .auth-button {
  height: 90rpx;
  line-height: 90rpx;
  width: 330rpx;
  margin-top: 30rpx;
  color: white;
  background-color: #dc228a;
  border-radius: 45rpx;
}

.content .auth-button::after {
  border: none;
}

.updatewx {
  text-align: center;
  color: lightgrey;
}