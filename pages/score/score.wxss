/* pages/score/score.wxss */
page {
  background-color:#f8f8f8;
}
.activity-container {
  background-color: white;
  margin-left: 5%;
  width: 90%;
  display: flex;
  border-radius: 20rpx;
  height:280rpx;
  margin-top: 30rpx;
}

.activity-container image {
  margin-top: 3%;
  margin-left: 3%;
  width: 28%;
  height: 88%;
}

.activity-right-container {
  margin-top: 3%;
  padding-left: 20rpx;
  width: 63%;
  height: 88%;
  display: flex;
  flex-direction: column;
}
.activity-item-first{
  font-size: 26rpx;
  color: rgb(134, 134, 134);
}
.activity-item {
  font-size: 26rpx;
  color: rgb(134, 134, 134);
  margin-top: 10rpx;
}
.coupons{
  font-size: 26rpx;
  color: rgb(134, 134, 134);
  margin-top: 20rpx;
}
.coupons_copy{
  font-size: 20rpx;
  font-weight: bold;
  margin-left:130rpx;
  color: #2b2b2b;
  margin-top: 10rpx;
  text-decoration:underline;
}

.activity_status{
  display: flex;
  position: absolute;
  margin-top:200rpx;
  margin-left:0rpx;
  font-size: 26rpx;
  color: rgb(134, 134, 134);
}

/* .gxzj{
  color:#99c441;
} */
.checking {
  color: black;
}
.check-success {
  color:#99c441;
}
.check-fail {
  color: red;
}

.nodata-container {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nodata-container text {
  color: #979797;
  font-size: 26rpx;
  padding: 0 50rpx;
  text-align: center;
}

.nodata-container image {
  width: 200rpx;
  height: 200rpx;
}

.coupons-box {
  display: flex;
  flex-direction: row;
  align-items: center;
}



.float-container {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}

.content {
  position: absolute;
  /* height: 550rpx; */
  width: 70%;
  border-radius: 10rpx;
  background-color: white;

  display: flex;
  flex-direction: column;
}

.content .content-title {
  text-align: center;
  font-size: 35rpx;
  line-height: 80rpx;
  height: 80rpx;
}

.content .content-info {
  padding: 0rpx 20rpx 20rpx 20rpx;
  font-size: 30rpx;
  color: rgb(134, 134, 134);
}

.info-tap-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  margin-left: 25rpx;
  margin-top: 10rpx;
  background-color: transparent;
}

