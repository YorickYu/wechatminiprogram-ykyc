<!--pages/new-select-seat/new-select-seat.wxml-->
<wxs src="../../common.wxs" module="util" />
<navigation id="navigationBar" title="{{title}}" background="{{background}}" back></navigation>
<!--电影信息  -->
<view class='info'>
  <view class='movieName'>{{movieName}}</view>
  <view class='planDetail'>{{planDetail}}</view>
</view>
<view class='screen'>
  <image class='bg' src='/images/new-select-seat/screen.png'></image>
  <text class='name'>{{hallName}} 银幕</text>
</view>
<!--座位示例图  -->
<scroll-view class='seatDemos' scroll-x='true' wx:if="{{loadComplete}}">
  <block wx:for="{{areaSeatTypeList}}" wx:key="menu_for" style="width:100%">
    <view class='seat' data-index="{{index}}" wx:if="{{item.isShow==='1'}}">
      <image src="{{item.icon}}" mode='aspectFit'></image>
      <text>{{item.name}}</text>
    </view>
  </block>
</scroll-view>
<!--以下是座位图区域  -->
<movable-area scale-area="true" style="height:{{seatArea}}px; width: 750rpx;">
  <movable-view class='movableOne' bindscale="handleScale" style="height:{{seatArea}}px; width: 750rpx;" scale="true" direction="all" scale-max="5" scale-min="1" out-of-bounds="true">
    <view class='seatArea' style='width:{{seatScaleHeight * maxX}}px;height:{{seatScaleHeight * maxY}}px'>
      <!--中轴线-->
      <view class='alignLine'></view>
      <view wx:for="{{seatList}}" wx:key="id" wx:for-index="index" wx:for-item="item" class='seatTap' catchtap='clickSeat' data-index='{{index}}' style="left:{{(item.gCol-1)* seatScaleHeight}}px;top:{{(item.gRow-1) * seatScaleHeight}}px;width: {{seatScaleHeight}}px;height: {{seatScaleHeight}}px">
        <image src="{{item.nowIcon}}" class='normal' />
      </view>
    </view>
  </movable-view>
</movable-area>
<!-- <view class="seatAreaTip">天下票仓技术支持</view> -->
<!-- 下部分座位示例图  -->
<!-- 用户选中的座位详情 -->
<view class='selectSeatInfoLine' />
<view class='selectSeatInfo' hidden='{{hidden}}'>
  <scroll-view class="scrollSeat" scroll-x style="width: 100%">
    <!-- 普通座位 -->
    <block wx:for="{{selectedSeat}}" wx:key="id" wx:for-item="selectedSeatItem">
      <view class='scrollItem' bindtap='clickSeat' data-index='{{selectedSeatItem.orgIndex}}'>
        <view class='scrollTextTop'>
          {{selectedSeatItem.row}}排{{selectedSeatItem.col}}座
        </view>
        <view class='scrollTextBottom'>
          ￥{{util.showPrice(selectedSeatItem.price)}}
        </view>
        <image src='/images/new-select-seat/close.png'></image>
      </view>
    </block>
  </scroll-view>
</view>
<!-- 快速选座 -->
<view class='quickSeatInfo' hidden='{{!hidden}}'>
  <view class='quick-select'>快速选座</view>
  <scroll-view class="scrollSeat" scroll-x style="width: 100%">
    <view class='quickItem' bindtap='quickSeat' data-num='1'>
      1人座
    </view>
    <view class='quickItem' bindtap='quickSeat' data-num='2'>
      2人座
    </view>
    <view class='quickItem' bindtap='quickSeat' data-num='3'>
      3人座
    </view>
    <view class='quickItem' bindtap='quickSeat' data-num='4'>
      4人座
    </view>
  </scroll-view>
</view>
<!-- 以下是确认选座 -->
<view class='orderComfirm' style="flex-direction:row;">
  <view class='comfirm' bindtap='confirmSelect'>￥<text>{{util.showPrice(totalPrice)}}</text> 确认选座</view>
</view>