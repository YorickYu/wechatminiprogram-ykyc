/* pages/new-select-seat/new-select-seat.wxss */
/*
*上方影片,排期信息的父级
*/
.info{
  width: 100%;
  height: 80rpx;
  background: #FFFFFF;
  border-top: 1rpx solid #EEEEEE;
  border-bottom: 1rpx solid #EEEEEE;
  padding:30rpx 30rpx; 
}
/*
*上方影片名称样式
*/
.movieName{
  font-size: 35rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}
/*
*上方排期信息样式
*/
.planDetail{
  color: #AAAAAA;
  font-size: 27rpx;
}
.screen{
  margin-top: 45rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}
.screen .bg{
  height: 70rpx;
}
.screen .name{
  font-size: 25rpx;
  color: black;
  margin-top: -25rpx;
}
/*
*座位样式的父级
*/
.seatDemos{
     width: 90%;
     height: 50rpx;
     margin: 0 auto;
     padding: 20rpx 0 10rpx 0;
     white-space: nowrap;
}
.seatDemos ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.seatDemos .seat{
     margin-left: 50rpx;
     display: inline-block;
     align-items: center;
}
.seatDemos .seat image{
     width: 45rpx;
     height: 22rpx;
}
.seatDemos .seat text{
     margin-left: 20rpx;
     color: #AAAAAA;
     font-size: 25rpx;
}
/*
*所有座位的区域
*/
.seatArea{
  margin: 0 auto;
  font-size: 10rpx;
  position: relative;
}
/*
*中轴线
*/
.alignLine{
  position: absolute;
  left: 50%;
  height: 100%; 
  border-left: 1px dashed #AAAAAA; 
  transform: translateX(-100%);
}
/*
*选座区域普通座位的图片样式
*/
.normal{
  position:relative;
  /* margin: 10rpx; */
  width: 100%;
  height: 100%;
}
/*
*选座区域情侣座位的图片样式
*/
.LoveSeat{
  position:relative;
  /* margin: 10rpx 0;  */
  width: 70rpx;
  height: 70rpx
}
/*
*所有座位的图片样式下方透明可点击区域
*/
.seatTap{
  position:absolute;
}
/*
*情侣座位的图片样式下方透明可点击区域
*/
.LoveSeatTap{
  position:absolute;
  top: 0;
  width: 70rpx;
  height: 70rpx
}
/*
* 座位图限制区域
*/
movable-area {
  background: #FFF;
  overflow: hidden;
}
/*
* 座位图可移动区域(座位图)
*/
.movableOne {
     box-sizing: border-box;
       /*上右下左*/
     padding: 60rpx 60rpx 60rpx 60rpx;
     color: #fff;
}
/*
* 座位图可移动区域(左边座位排号栏)
*/
.movableTwo {
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
  height: 1400rpx;
  width: 30rpx;
  padding: 100rpx 0 ;
  color: #fff;
}
/*
* (左边座位排号栏整体)
*/
.seatTool{
  width: 30rpx;
  padding: 60rpx 0;
  opacity: 0.5;
}
.seatToolArea{
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50rpx;
}
/*
* (左边座位排号栏每一个块)
*/
.seatTag{
  text-align: center;
  color: rgba(0, 0, 0, 0.5);
}
/*
*页面最下方价格区域
*/
.orderPrice{
  text-indent: 30rpx;
  color: black;
  height: 100rpx;
  width: 60%;
}
/*
*页面最下方价格字体样式
*/
.orderPrice text{
  color: red;
}
/*
*页面最下方确认选座区域
*/
.orderComfirm{
  background: #FFFFFF;
  position: fixed;
  display: flex;
  bottom: 0rpx;
  width: 100%;
  line-height: 100rpx;
  z-index: 3;
  height: 150rpx;
}
/*
*页面最下方确认选座区域渐变色
*/
.comfirm{
  font-weight:900; 
  text-align: center;
  color: white;
  width: 100%;
  background: #DE188A; 
  margin:30rpx 55rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.selectSeatInfoLine{
     background: #f6f6f6;
     width: 100%;
     height: 1rpx;
     bottom: 261rpx;
     position: fixed;
}
/*
*用户选中的座位区域
*/
.selectSeatInfo{
  background: #FFFFFF;
  position: fixed;
  bottom: 160rpx;
  height: 80rpx;
  width: 100%;
  padding: 10rpx 0;
}
/*
*用户选中的座位详情滑块
*/
.selectSeatInfo .scrollSeat{
  height: 90rpx;
  white-space: nowrap;
}
.selectSeatInfo .scrollSeat ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
/*
*每块用户选中的座位详情
*/
.selectSeatInfo .scrollSeat .scrollItem{
  border: 1rpx solid #BBBBBB;
  border-radius:10rpx; 
  width: 180rpx;
  display: inline-block;
  margin-left:20rpx; 
  position: relative;
}
/*
*快速选择的区域
*/
.quickSeatInfo{
  background: #FFFFFF;
  position: fixed;
  bottom: 160rpx;
  height: 80rpx;
  width: 100%;
  padding: 10rpx 0;
}
.quickSeatInfo .quick-select{
     font-size: 24rpx;
     color: #555555;
     margin-left: 20rpx;
}
/*
*快速选择的滑块
*/
.quickSeatInfo .scrollSeat{
  height: 80rpx;
  white-space: nowrap;
}
/*
* 快速选座模块
*/
.quickSeatInfo .scrollSeat .quickItem{
  border: 1rpx solid #BBBBBB;
  color: #AAAAAA;
  font-size: 28rpx;
  border-radius:10rpx; 
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  display: inline-block;
  margin-left:20rpx; 
  position: relative;
}
/*
*每块用户选中的座位详情上方文字
*/
.scrollTextTop{
  color: #555555;
  text-indent: 30rpx;
  line-height: 25rpx;
  font-size:26rpx; 
  height: 25rpx;
  margin-top:10rpx;
}
/*
*每块用户选中的座位详情下方文字
*/
.scrollTextBottom{
  font-weight: 600;
  font-size:26rpx; 
  color: #FF005A;
  text-indent: 40rpx;
  height: 25rpx;
  line-height: 25rpx;
  margin:10rpx 0 ;
}
/*
*每块用户选中的座位详情关闭按钮
*/
.scrollItem image{
  position: absolute;
  z-index: 2;
  width: 30rpx;
  height: 30rpx;
  right: 10rpx;
  top: 50%;
  transform:translateY(-50%); 
}
.seatAreaTip{
  width: 750rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 16rpx;
  color: rgba(0, 0, 0, 0.1);
  text-shadow:0rpx 6rpx 10rpx #AAAAAA; 
}