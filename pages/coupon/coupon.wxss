page {
  background-color: #f8f8f8;
  height: 100%;
  width: 100%;
}

/* 切换 */

.ordrswitchbar {
  height: 120rpx;
  width: 100%;
  background-color: white;
  position: fixed;
  display: flex;
  z-index: 10;
}

.ordrswitchbar .switchitem {
  position: relative;
  font-size: 34rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.ordrswitchbar .switchitem.actived {
  font-weight: bold;
}

.ordrswitchbar .switchitem image {
  position: absolute;
  margin-top: 40rpx;
  width: 44rpx;
  height: 10rpx;
}

/* 列表区域 */

.coupon-list {
  margin-top: 150rpx;
  padding: 0 30rpx;
}

.nodata-container {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nodata-container text {
  color: #979797;
  font-size: 26rpx;
  padding: 0 50rpx;
  text-align: center;
}

.nodata-container image {
  width: 200rpx;
  height: 200rpx;
}

.guide-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
}

.top-mask {
  position: fixed;
  top: 0;
  width: 100%;
}

.bottom-mask {
  position: fixed;
}

.guide-border {
  position: fixed;
  height: 200rpx;
  width: 750rpx;
  margin-top: 30rpx;
  z-index: 100;
}
.guide-pointer {
  position: fixed;
  height: 258rpx;
  width: 156rpx;
  z-index: 101;
}

.bind-success {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.bind-success text {
  font-size: 30rpx;
  background-color: rgba(1, 1, 1, 0.6);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

/* 未登陆 */



.code-content {
  /* position: absolute; */

  margin-top: 150rpx;
  padding-bottom: 30rpx;
  width: 100%;
  background-color: f8f8f8;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.code-content .img {

  margin-top: 50rpx;
  width:263rpx;
  height:190rpx;
}

.code-content .text-container text {
  width: 100%;
  color: #a6a6a6;
  font-size: 34rpx;
}


.code-content .auth-button {
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  width: 330rpx;
  margin-top: 40rpx;
  color: white;
  background-color: #dc228a;
  border-radius: 45rpx;
}

.code-content .auth-button::after {
  border: none;
}
